#!/bin/bash

atlas='anat_MNI_shen_268-resamp'
n=268

echo 'running split atlas on ${atlas} using ${n} ROIs.'

# loop through atlas, generating individual ROIs, unzipped.
for i in $(seq 1 ${n}); do
    3dcalc \
        -prefix ${atlas}-${i}.nii.gz \
        -a ${atlas}.nii.gz \
        -expr 'equals(a, '${i}')'
    gunzip ${atlas}-${i}.nii.gz
done

